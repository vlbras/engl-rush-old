{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false,
    "paths": {
      "@common/core": [
        "libs/core/src"
      ],
      "@common/rabbitmq": [
        "libs/rabbitmq/src"
      ],
      "@common/mongodb": [
        "libs/mongodb/src"
      ],
      "@common/user": [
        "libs/user/src"
      ],
      "#user/*": [
        "apps/user/src/*"
      ],
      "@common/folder": [
        "libs/folder/src"
      ],
      "#folder/*": [
        "apps/folder/src/*"
      ],
      "@common/word": [
        "libs/word/src"
      ],
    }
  }
}